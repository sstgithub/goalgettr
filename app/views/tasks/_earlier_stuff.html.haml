.container
	= form_for @task do |f|
		= f.hidden_field :user_id, value: current_user.id
		.form-horizontal
			.fieldset
				.form-group
					.col-sm-2.control-label
						= f.label :task_name
					.col-sm-6
						= f.text_field :task_name, class: "form-control"
				.form-group
					.col-sm-2.control-label
						= f.label :description
					.col-sm-6
						= f.text_area :description, class: "form-control"
				.form-group
					.col-sm-2.control-label
						= f.label :due_datetime
					.col-sm-6
						.input-group
							.input-group-addon
								#datetimepicker1.glyphicon.glyphicon-calendar
								= f.text_field :due_datetime, class: "form-control"
				.form-group
					.col-sm-2.control-label
						= f.label :status
					.col-sm-6
						= f.select :status, status_type.each {|a| a.humanize}, class: "form-control"

				.actions
					.form-group
						.col-sm-6.col-sm-offset-2
							= f.submit 'Save', :class => "btn btn-primary form-control"
							= link_to 'Cancel', tasks_path, :class => "btn btn-default form-control"