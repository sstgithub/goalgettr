- if t.est_time == '10'
	%li.task#very-low
		= render 'task_columns', t: t
- elsif t.est_time == '30'
	%li.task#low
		= render 'task_columns', t: t
- elsif t.est_time == '60'
	%li.task#medium
		= render 'task_columns', t: t
- elsif t.est_time == '180'
	%li.task#high
		= render 'task_columns', t: t
- elsif t.est_time == '300'
	%li.task#very-high
		= render 'task_columns', t: t
- else
	%li.task
		= render 'task_columns', t: t